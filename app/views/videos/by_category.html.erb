<h4>Videos da categoria - <%= @category%> </h4>
<div class="row">
	<div class="col s12 m3">
		<%= render 'categories/menu' %>
	</div>
	<div class="col s12 m9">
		<div class="row">
			<% @videos.each do |video| %>
				<div class="col s12 m4">
					<div class="card">
						<div class="card-image">
							<iframe width="100%" height="200" src="https://youtube.com/embed/<%= video.youtube_embed_id%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
							<%= link_to '<i class="material-icons">open_in_new</i>'.html_safe , video, class:"btn-floating halfway-fab waves-effect waves-light" %>
						</div>
						<div class="card-content">
						<small>T√çTULO:</small>
						<span class="card-title"><%= video.title %></span>
						</div>
					</div>
				</div>
			<%end %>
		</div>
	</div>
</div>